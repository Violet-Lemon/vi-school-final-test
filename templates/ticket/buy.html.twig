{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block body %}
    <a class="btn btn-outline-primary btn-sm" href="{{ path('homepage') }}">
        На главную
    </a>
    <div class="container mt-5 bg-light">
        {{ form_start(form) }}
        <div class="row g-3 align-items-center">
            <div class="col-4">
                {{ form_row(form.flight) }}
            </div>
            <div class="col-2">
                {{ form_row(form.flightDate) }}
            </div>
        </div>
        <div class="row g-3 align-items-center">
            <div class="col-6">
                {{ form_row(form.passenger) }}
            </div>
        </div>
        <div class="row g-3 mb-3 align-items-center">
            <a href="{{ path('passenger.add') }}">
                Добавить нового пассажира в систему
            </a>
        </div>
        <div class="row justify-content-center">
            <div class="col-7">
                {{ form_row(form.buy) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}