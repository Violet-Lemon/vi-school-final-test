{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block body %}
    <a class="btn btn-primary btn-sm" href="{{ path('homepage') }}">
        На главную
    </a>

    <div class="container">
        {{ form_start(form) }}
        <div class="row g-3 align-items-center">
            <div class="col">
                {{ form_row(form.flight) }}
            </div>
            <div class="col">
                Дата
            </div>
        </div>
        <div class="row g-3 align-items-center">
            <div class="col">
                {{ form_row(form.passenger) }}
            </div>
        </div>
        <div class="row g-3 align-items-center">
            <a href="{{ path('passenger.add') }}">
                Добавить нового пассажира в систему
            </a>
        </div>
        <div class="row gy-3 justify-content-center">
            <div class="col">
                {{ form_row(form.buy) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}