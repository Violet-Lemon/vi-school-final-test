{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block body %}
    <a class="btn btn-primary btn-sm" href="{{ path('homepage') }}">
        На главную
    </a>
    <h1>Добавить нового пассажира</h1>
    <div>
        {{ form(form) }}
    </div>
    <div class="container">
        {{ form_start(form) }}
        <div class="row g-3 align-items-center">
            <div class="col">
                {{ form_label(form.surname) }}
            </div>
            <div class="col">
                {{ form_widget(form.surname) }}
            </div>
            <div class="col">
                {{ form_label(form.name) }}
            </div>
            <div class="col">
                {{ form_widget(form.name) }}
            </div>
            <div class="col">
                {{ form_label(form.patronymic) }}
            </div>
            <div class="col">
                {{ form_widget(form.patronymic) }}
            </div>
            <div class="col">
                Паспорт
            </div>
            <div class="col">
                {{ form_label(form.passportSeries) }}
            </div>
            <div class="col">
                {{ form_widget(form.passportSeries) }}
            </div>
            <div class="col">
                {{ form_label(form.passportNumber) }}
            </div>
            <div class="col">
                {{ form_widget(form.passportNumber) }}
            </div>
        </div>
        <div class="row gy-3 justify-content-center">
            <div class="col">
                {{ form_row(form.save) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}